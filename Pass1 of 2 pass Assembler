SIC/XE SOURCE PROGRAM
---------------------

#include<stdio.h>
#include<stdlib.h>
#include<string.h>


void main(){

    char label[10],opcode[10],operand[10];
    int loc,sa,op;
    int symflag=0,opflag=0;

    int addr;
    char symbol[10],optab[10];

    FILE *f1,*f2,*f3,*f4;

    f1 = fopen("input.txt","r");
    f3 = fopen("symtab.txt","w");
    f4 = fopen("intermediatefile","w");

    fscanf(f1,"%s %s %s",label,opcode,operand);

    if(strcmp(opcode,"START") == 0){
        sa = atoi(operand);
        loc = sa;
        fprintf(f4,"%d %s %s %d\n",loc,label,opcode,op);

    }else{
        loc = 0;
    }

    fscanf(f1,"%s %s %s",label,opcode,operand);

    while(strcmp(opcode,"END") != 0){
        
        if(strcmp(label,"-") != 0){
            
            fprintf(f3,"%d %s\n",loc,label);
            
        }

        f2 = fopen("optab.txt","r");
        while(!feof(f2)){
            fscanf(f2,"%s",optab);
            if(strcmp(opcode,optab) == 0){
                loc = loc + 3;
                break;
            }
        }
        fclose(f2);

        
            if(strcmp(opcode,"WORD") == 0){
                loc = loc + 3;
                
            }else if(strcmp(opcode,"RESW") == 0){
                int operand1 = atoi(operand);
                loc += 3*operand1;
            }else if(strcmp(opcode,"RESB") == 0){
                int operand1 = atoi(operand);
                loc += operand1;
            }else if(strcmp(opcode,"BYTE") == 0){
                if(operand[0] == 'X'){
                    loc += 1;
                }else{
                    int len = strlen(operand) - 2;
                    loc += len;
                }
                
            }
        

        fprintf(f4,"%d %s %s %s\n",loc,label,opcode,operand);
        fscanf(f1,"%s %s %s",label,opcode,operand);
    }

    printf("Program length = %d\n",loc-sa);

    fclose(f1);
    fclose(f3);
    fclose(f4);

}

----------------
INPUT FILE

COPY	START	1000
-	LDA	ALPHA
-	ADD	ONE
-	SUB	TWO
-	STA	BETA
ALPHA	BYTE	C'KLNCE
ONE	RESB	2
TWO	WORD	5
BETA	RESW	1
-	END	-

--------------
OPTAB

LDA	00
STA	23
ADD	01
SUB	05
